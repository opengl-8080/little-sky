                  <MenuItem mnemonicParsing="false" onAction="#close" text="Exit" />
              </items>
            </ContextMenu>
         </contextMenu>
      </Label>
      <Pane fx:id="temperaturePane" prefWidth="10.0" style="-fx-background-color: red;" />
   </children>
</HBox>
